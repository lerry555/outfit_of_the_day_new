// lib/screens/select_outfit_screen.dart

import 'package:cloud_firestore/cloud_firestore.dart';
import 'package:firebase_auth/firebase_auth.dart';
import 'package:flutter/material.dart';

import 'daily_outfit_screen.dart';

/// Obrazovka, kde si používateľ vyberie, na aký typ dňa/udalosti
/// chce outfit: dnes, zajtra, dnešná udalosť, zajtrajšia udalosť.
///
/// Tlačidlá na udalosti sa zobrazia len vtedy, ak v kalendári
/// existuje aspoň jedna udalosť pre daný deň.
///
/// Poznámka k štruktúre Firestore:
/// collection: calendarEvents/{uid}/events/{eventId}
/// fields:
///   - date: '2025-12-12' (string, formát yyyy-MM-dd)
///   - title: 'Vianočný večierok'
///   - type:  'party' | 'práca' | 'rande' | ...
///   - location: 'Bratislava, centrum'
///   - startTime: '18:00'
///   - endTime:   '23:00'
class SelectOutfitScreen extends StatefulWidget {
  const SelectOutfitScreen({Key? key}) : super(key: key);

  @override
  State<SelectOutfitScreen> createState() => _SelectOutfitScreenState();
}

class _SelectOutfitScreenState extends State<SelectOutfitScreen> {
  final FirebaseAuth _auth = FirebaseAuth.instance;
  final FirebaseFirestore _firestore = FirebaseFirestore.instance;

  bool _isLoading = true;

  Map<String, dynamic>? _todayEvent;
  Map<String, dynamic>? _tomorrowEvent;

  @override
  void initState() {
    super.initState();
    _loadEventsForTodayAndTomorrow();
  }

  String _formatDate(DateTime date) {
    // Vracia yyyy-MM-dd v lokálnom čase
    final year = date.year.toString().padLeft(4, '0');
    final month = date.month.toString().padLeft(2, '0');
    final day = date.day.toString().padLeft(2, '0');
    return '$year-$month-$day';
  }

  Future<void> _loadEventsForTodayAndTomorrow() async {
    setState(() {
      _isLoading = true;
    });

    try {
      final user = _auth.currentUser;
      if (user == null) {
        setState(() {
          _isLoading = false;
          _todayEvent = null;
          _tomorrowEvent = null;
        });
        return;
      }

      final now = DateTime.now();
      final today = DateTime(now.year, now.month, now.day);
      final tomorrow = today.add(const Duration(days: 1));

      final todayStr = _formatDate(today);
      final tomorrowStr = _formatDate(tomorrow);

      final eventsRef = _firestore
          .collection('calendarEvents')
          .doc(user.uid)
          .collection('events');

      final todaySnap =
          await eventsRef.where('date', isEqualTo: todayStr).limit(1).get();
      final tomorrowSnap =
          await eventsRef.where('date', isEqualTo: tomorrowStr).limit(1).get();

      Map<String, dynamic>? todayEvent;
      Map<String, dynamic>? tomorrowEvent;

      if (todaySnap.docs.isNotEmpty) {
        final doc = todaySnap.docs.first;
        todayEvent = {
          'id': doc.id,
          ...doc.data(),
        };
      }

      if (tomorrowSnap.docs.isNotEmpty) {
        final doc = tomorrowSnap.docs.first;
        tomorrowEvent = {
          'id': doc.id,
          ...doc.data(),
        };
      }

      if (!mounted) return;

      setState(() {
        _isLoading = false;
        _todayEvent = todayEvent;
        _tomorrowEvent = tomorrowEvent;
      });
    } catch (e) {
      debugPrint('Chyba pri načítaní udalostí na dnes/zajtra: $e');
      if (!mounted) return;
      setState(() {
        _isLoading = false;
        _todayEvent = null;
        _tomorrowEvent = null;
      });
    }
  }

  @override
  Widget build(BuildContext context) {
    final hasTodayEvent = _todayEvent != null;
    final hasTomorrowEvent = _tomorrowEvent != null;

    return Scaffold(
      appBar: AppBar(
        title: const Text('Vybrať outfit'),
      ),
      body: _isLoading
          ? const Center(child: CircularProgressIndicator())
          : SingleChildScrollView(
              padding: const EdgeInsets.all(16.0),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Text(
                    'Vyber si, na čo chceš outfit:',
                    style: Theme.of(context).textTheme.titleLarge,
                  ),
                  const SizedBox(height: 16),

                  // 1) Outfit na dnes
                  _buildPrimaryCard(
                    title: 'Outfit na dnes',
                    subtitle:
                        'Bežný denný outfit na dnešok podľa počasia a tvojho šatníka.',
                    icon: Icons.calendar_today,
                    onTap: () {
                      Navigator.push(
                        context,
                        MaterialPageRoute(
                          builder: (context) => const DailyOutfitScreen(
                            isTomorrow: false,
                            isEvent: false,
                          ),
                        ),
                      );
                    },
                  ),
                  const SizedBox(height: 12),

                  // 2) Outfit na zajtra
                  _buildSecondaryCard(
                    title: 'Outfit na zajtra',
                    subtitle:
                        'Priprav sa dopredu – outfit na zajtra podľa počasia.',
                    icon: Icons.calendar_view_day,
                    onTap: () {
                      Navigator.push(
                        context,
                        MaterialPageRoute(
                          builder: (context) => const DailyOutfitScreen(
                            isTomorrow: true,
                            isEvent: false,
                          ),
                        ),
                      );
                    },
                  ),
                  const SizedBox(height: 24),

                  if (hasTodayEvent || hasTomorrowEvent) ...[
                    Text(
                      'Udalosti z kalendára:',
                      style: Theme.of(context).textTheme.titleMedium,
                    ),
                    const SizedBox(height: 12),
                  ],

                  // 3) Outfit na dnešnú udalosť (iba ak existuje)
                  if (hasTodayEvent)
                    _buildPrimaryCard(
                      title: 'Outfit na dnešnú udalosť',
                      subtitle: _buildEventSubtitle(_todayEvent!),
                      icon: Icons.event,
                      onTap: () {
                        final e = _todayEvent!;
                        Navigator.push(
                          context,
                          MaterialPageRoute(
                            builder: (context) => DailyOutfitScreen(
                              isTomorrow: false,
                              isEvent: true,
                              eventTitle: (e['title'] as String?) ?? '',
                              eventType: (e['type'] as String?) ?? '',
                              eventDate: DateTime.now(),
                              eventLocation: (e['location'] as String?) ?? '',
                            ),
                          ),
                        );
                      },
                    ),

                  if (hasTodayEvent) const SizedBox(height: 12),

                  // 4) Outfit na zajtrajšiu udalosť (iba ak existuje)
                  if (hasTomorrowEvent)
                    _buildSecondaryCard(
                      title: 'Outfit na zajtrajšiu udalosť',
                      subtitle: _buildEventSubtitle(_tomorrowEvent!),
                      icon: Icons.event_available,
                      onTap: () {
                        final e = _tomorrowEvent!;
                        final tomorrow =
                            DateTime.now().add(const Duration(days: 1));
                        Navigator.push(
                          context,
                          MaterialPageRoute(
                            builder: (context) => DailyOutfitScreen(
                              isTomorrow: true,
                              isEvent: true,
                              eventTitle: (e['title'] as String?) ?? '',
                              eventType: (e['type'] as String?) ?? '',
                              eventDate: tomorrow,
                              eventLocation: (e['location'] as String?) ?? '',
                            ),
                          ),
                        );
                      },
                    ),
                ],
              ),
            ),
    );
  }

  String _buildEventSubtitle(Map<String, dynamic> event) {
    final title = (event['title'] as String?) ?? 'Udalosť z kalendára';
    final location = (event['location'] as String?) ?? '';
    final timeFrom = (event['startTime'] as String?) ?? '';
    final timeTo = (event['endTime'] as String?) ?? '';

    final buffer = StringBuffer(title);

    if (location.isNotEmpty) {
      buffer.write(' • $location');
    }

    if (timeFrom.isNotEmpty || timeTo.isNotEmpty) {
      buffer.write(' • ');
      if (timeFrom.isNotEmpty) buffer.write(timeFrom);
      if (timeTo.isNotEmpty) buffer.write(' – $timeTo');
    }

    return buffer.toString();
  }

  Widget _buildPrimaryCard({
    required String title,
    required String subtitle,
    required IconData icon,
    required VoidCallback onTap,
  }) {
    return Card(
      shape: RoundedRectangleBorder(
        borderRadius: BorderRadius.circular(16),
      ),
      elevation: 4,
      child: InkWell(
        borderRadius: BorderRadius.circular(16),
        onTap: onTap,
        child: Padding(
          padding: const EdgeInsets.all(16.0),
          child: Row(
            children: [
              Icon(icon, size: 32),
              const SizedBox(width: 12),
              Expanded(
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Text(
                      title,
                      style: Theme.of(context).textTheme.titleMedium,
                    ),
                    const SizedBox(height: 4),
                    Text(
                      subtitle,
                      style: Theme.of(context).textTheme.bodySmall,
                    ),
                  ],
                ),
              ),
              const SizedBox(width: 12),
              const Icon(Icons.chevron_right),
            ],
          ),
        ),
      ),
    );
  }

  Widget _buildSecondaryCard({
    required String title,
    required String subtitle,
    required IconData icon,
    required VoidCallback onTap,
  }) {
    return Card(
      shape: RoundedRectangleBorder(
        borderRadius: BorderRadius.circular(16),
      ),
      elevation: 1,
      child: InkWell(
        borderRadius: BorderRadius.circular(16),
        onTap: onTap,
        child: Padding(
          padding: const EdgeInsets.all(16.0),
          child: Row(
            children: [
              Icon(icon, size: 28),
              const SizedBox(width: 12),
              Expanded(
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Text(
                      title,
                      style: Theme.of(context).textTheme.titleMedium,
                    ),
                    const SizedBox(height: 4),
                    Text(
                      subtitle,
                      style: Theme.of(context).textTheme.bodySmall,
                    ),
                  ],
                ),
              ),
              const SizedBox(width: 12),
              const Icon(Icons.chevron_right),
            ],
          ),
        ),
      ),
    );
  }
}